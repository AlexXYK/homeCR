# ============================================
# Universal OCR System - Configuration
# ============================================

# === OLLAMA (Local Models) ===
OLLAMA_HOST=http://192.168.0.153:11434
OLLAMA_VISION_MODEL=qwen2.5vl:7b
OLLAMA_TEXT_MODEL=gemma3:12b-it-qat

# === VISION PROVIDER ===
# Options: ollama (free, local), gemini (fast, cheap cloud), openai, anthropic, openrouter
VISION_PROVIDER=ollama

# === API KEYS (Only add if using cloud providers) ===
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# === PROVIDER-SPECIFIC MODELS ===
GEMINI_MODEL=gemini-2.0-flash-exp
OPENAI_MODEL=gpt-4-vision-preview
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# === DEFAULT OCR BEHAVIOR ===
USE_HYBRID_OCR=true       # Run both Tesseract + Surya in parallel
PERFECT_TABLES=false      # Use vision provider only for perfect table formatting

# === API CONFIGURATION ===
API_PORT=5000
DASHBOARD_PORT=8080

# === LOGGING ===
LOG_LEVEL=INFO

# ============================================
# RECOMMENDED CONFIGURATIONS
# ============================================

# Personal Use (Free, Private):
#   VISION_PROVIDER=ollama
#   PERFECT_TABLES=false

# Business Documents (Best Balance):
#   VISION_PROVIDER=ollama
#   PERFECT_TABLES=true
#   GEMINI_MODEL=gemini-2.0-flash-exp

# Maximum Quality:
#   VISION_PROVIDER=gemini  # or anthropic
