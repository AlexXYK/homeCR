# Docker Compose Override Example
# Copy this file to docker-compose.override.yml and modify as needed
# This file allows local customizations without affecting the main docker-compose.yml

version: '3.8'

services:
  surya-ocr:
    # Override port mapping
    ports:
      - "8000:5000"  # Use port 8000 instead of 5000
    
    # Add development environment variables
    environment:
      - DEBUG=1
      - LOG_LEVEL=DEBUG
    
    # Mount local code for development (uncomment for dev work)
    # volumes:
    #   - ./app.py:/app/app.py
    #   - ./cleanup_fix.py:/app/cleanup_fix.py
    #   - ./cleanup_patch.py:/app/cleanup_patch.py
    #   - ./cleanup_patch2.py:/app/cleanup_patch2.py
    #   - ./cleanup_patch3.py:/app/cleanup_patch3.py
    
    # Add more memory for large images
    deploy:
      resources:
        limits:
          memory: 2G
        reservations:
          memory: 1G

